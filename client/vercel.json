{
  "buildCommand": "cd client && npm run build",
  "outputDirectory": "client/.next",
  "installCommand": "cd client && npm install --legacy-peer-deps",
  "framework": "nextjs",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://your-backend-url.com/api/:path*"
    }
  ]
}